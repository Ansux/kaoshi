@model IEnumerable<kaoshi.Models.es_student>

@{
   ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
   @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
   <tr>
      <th>学号</th>
      <th>姓名</th>
      <th>班级</th>
      <th>性别</th>
      <th>Email</th>
      <th>操作</th>
   </tr>

   @foreach (var item in Model)
   {
      <tr>
         <td>
            @Html.DisplayFor(modelItem => item.sno)
         </td>
         <td>
            @Html.DisplayFor(modelItem => item.real_name)
         </td>
         <td>
            @Html.DisplayFor(modelItem => item.es_class.name)
         </td>
         <td>@Html.Raw(item.sex == 1 ? "男" : "女")</td>
         <td>
            @Html.DisplayFor(modelItem => item.email)
         </td>
         <td>
            @Html.ActionLink("编辑", "Edit", new { id = item.sno }) |
            @Html.ActionLink("详情", "Details", new { id = item.sno }) |
            @Html.ActionLink("删除", "Delete", new { id = item.sno })
         </td>
      </tr>
               }

</table>
