@model IEnumerable<kaoshi.Models.es_teacher>

@{
   ViewBag.Title = "Index";
   ViewBag.Controller = "教师";
   ViewBag.Action = "列表";
}

<div class="top-tools">
   <div class="action"><span class="glyphicon glyphicon-map-marker"></span>教师列表</div>
   @Html.ActionLink("添加科目", "Create")
</div>

<div class="render-datas">
   <table class="table">
      <thead>
         <tr>
            <th>登录名</th>
            <th>姓名</th>
            <th>性别</th>
            <th>Email</th>
            <th>操作</th>
         </tr>
      </thead>
      @foreach (var item in Model)
      {
      <tr>
         <td>
            @Html.DisplayFor(modelItem => item.login_id)
         </td>
         <td>
            @Html.DisplayFor(modelItem => item.real_name)
         </td>
         <td>@Html.Raw(item.sex == 1 ? "男" : "女")</td>
         <td>
            @Html.DisplayFor(modelItem => item.email)
         </td>
         <td>
            @Html.ActionLink("编辑", "Edit", new { id = item.id }) |
            @Html.ActionLink("详情", "Details", new { id = item.id })
         </td>
      </tr>
      }

   </table>
</div>