<!DOCTYPE html>
<html>
<head>
   <meta charset="utf-8" />
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>@ViewBag.Title - My ASP.NET Application</title>
   <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
   <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
   <script src="~/Scripts/modernizr-2.6.2.js"></script>
   @RenderSection("Styles", false)
</head>
<body>
   <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
         <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
               <span class="icon-bar"></span>
               <span class="icon-bar"></span>
               <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("T-ADMIN", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
         </div>
         <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
               <li>@Html.ActionLink("教师", "index", "teachers")</li>
               <li>@Html.ActionLink("学生", "index", "students")</li>
               <li>@Html.ActionLink("班级", "index", "class")</li>
               <li>@Html.ActionLink("考试", "index", "Exam")</li>
               <li>@Html.ActionLink("科目", "index", "subjects")</li>
               <li>@Html.ActionLink("公告", "index", "notice")</li>
               <li>@Html.ActionLink("统计", "Chart", "Exam")</li>
            </ul>
            <ul class="nav navbar-nav navbar-right user-menu">
               <li class="dropdown">
                  @if (Session["Mid"] == null)
                  {
                     <a href="/admin/account/signin" id="userName">
                        登录/注册
                     </a>
                  }
                  else
                  {
                     <a href="#" id="userName" class="dropdown-toggle" data-toggle="dropdown">
                        <span class="glyphicon glyphicon-user"></span> @Session["MLoginId"]
                        <span class="caret"></span>
                     </a>
                     <ul class="dropdown-menu">
                        <li>
                           <a href="#"><span class="glyphicon glyphicon-user"></span> 简介</a>
                        </li>
                        <li>
                           <a href="/admin/account/setting"><span class="glyphicon glyphicon-cog"></span> 设置</a>
                        </li>
                        <li>
                           <a href="/admin/account/signout"><span class="glyphicon glyphicon-log-out"></span> 登出</a>
                        </li>
                     </ul>
                  }
               </li>
            </ul>
         </div>
      </div>
   </div>

   <div class="container body-content">
      @RenderBody()
      <hr />
      <footer>
         <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
      </footer>
   </div>

   <script src="~/Scripts/jquery-1.10.2.min.js"></script>
   <script src="~/Scripts/bootstrap.min.js"></script>
   @RenderSection("Scripts", false)
</body>
</html>