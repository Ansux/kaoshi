@model IEnumerable<kaoshi.Models.es_notice>

@{
   ViewBag.Title = "Index";
   ViewBag.Controller = "公告";
   ViewBag.Action = "列表";
}

<div class="top-tools">
   <div class="action"><span class="glyphicon glyphicon-map-marker"></span>公告列表</div>
   @Html.ActionLink("添加公告", "Create")
</div>

<div class="render-datas">
   <table class="table">
      <thead>
         <tr>
            <th>标题</th>
            <th>发布时间</th>
            <th>操作</th>
         </tr>
      </thead>
      @foreach (var item in Model)
      {
         <tr>
            <td>
               @Html.DisplayFor(modelItem => item.title)
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.create_at)
            </td>
            <td>
               @Html.ActionLink("更新", "Edit", new { id = item.id }) |
               @Html.ActionLink("详情", "Details", new { id = item.id }) |
               @Html.ActionLink("删除", "Delete", new { id = item.id })
            </td>
         </tr>
      }
   </table>
</div>